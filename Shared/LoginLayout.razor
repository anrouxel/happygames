@inject NavigationManager NavigationManager

<div class="d-table position-fixed h-100 w-100">
    <div class="d-table-row">
        <div class="d-table-cell align-middle">
            <RadzenCard class="col-lg-5 position-relative" style="margin-left: auto; margin-right: auto;">
                <h2 class="mb-4">Connexion</h2>
                <RadzenLogin
                    AllowRegister="true"
                    AllowResetPassword="true"
                    UserText="Utilisateur"
                    PasswordText="Mot de passe"
                    LoginText="Connexion"
                    ResetPasswordText="Mot de passe oublié ?"
                    RegisterText="Créer un compte"
                    RegisterMessageText="Vous n'avez pas de compte ?"
                    Register=@OnRegister />
            </RadzenCard>
        </div>
    </div>
</div>

@code {
    void OnRegister() {
        NavigationManager.NavigateTo("register");
    }
}